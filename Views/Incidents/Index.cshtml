@model IEnumerable<AvengersUnityIdentity.Models.Incident>

@{
    ViewBag.Title = "Index";
}
<div class="jumbotron background">

    <h2>Incidents</h2>

    <p>
        @Html.ActionLink("Déclarer un incident", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom_Incident)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gravite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type_degat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lieu)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom_Incident)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gravite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type_degat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lieu)
                </td>
                <td>
                    @Html.ActionLink("Consulter", "Details", new { id = item.IncidentID }) |
                </td>
            </tr>
        }

    </table>
</div>